html
	head
		title= title
		link(rel='stylesheet', href='/stylesheets/style.css')
		script(src="https://cdn.socket.io/4.6.0/socket.io.min.js" integrity="sha384-c79GN5VsunZvi+Q/WObgk2in0CbZsHnjEqvFxC5DxHn9lTfNce2WW6h2pH6u/kF+" crossorigin="anonymous")

	body
		h1= title
		p Welcome to #{title}
		ul#logs
			each log in logs
				li= log

	script.
		const socket = io();
		socket.on('log', function(log) {
			const newLi = document.createElement('li');
			const textNode = document.createTextNode(log);
			newLi.appendChild(textNode);
			document.getElementById('logs').appendChild(newLi);
		});
